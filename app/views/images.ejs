<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Rough Note</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="javascript" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link rel="stylesheet" href="../css/style.css">
    <script src="../js/script.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>

<script>
function preview_images()
{
 var total_file=document.getElementById("images").files.length;
 for(var i=0;i<total_file;i++)
 {
  $('#image_preview').append("<div class='col-md-3'><img class='img-responsive' src='"+URL.createObjectURL(event.target.files[i])+"'></div>");
 }
}

</script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="margin:10px;">
<a class="navbar-brand " href="/"><strong style="color: white;">Rough</strong><i style="color:red;">Note</i></a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNavDropdown">
  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="/notes" style="color:white;">Notes <span class="sr-only">(current)</span></a>
    </li>


  </ul>
</div>
</nav>
<div class="">

  <div class="col-12">

      <form action="/images" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-md-4">
            <% if(msg !=undefined){ %>

              <div class="alert alert-success alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= msg %>!</strong>
              </div>

            <% } %>
          </div>
       <div class="col-md-4">
           <input type="file" class="form-control" id="images" name="img" onchange="preview_images();" multiple/>
       </div>
       <div class="col-md-4">
           <input type="submit" class="btn btn-primary" name='submit_image' value="Upload Image"/>
       </div>
     </div>

      </form>
    </div>

</div>
<div class="row" id="image_preview"></div>

   <div class="row">

      <% images.forEach(function(image){ %>

          <% for (var i = 0; i < image.img.length; i++) { %>

       <div class="col-lg-3 col-md-4 col-xs-6 thumb">
           <a href="#" class="fancybox" rel="ligthbox">
               <img  src="../<%= image.img[i] %>" class="zoom img-fluid "  alt="">

           </a>
       </div>
       <% } }); %>





</div>
  </body>
</html>
